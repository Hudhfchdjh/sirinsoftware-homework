#include <stdio.h> 
int main() 
{ 
    int a = 1; /*ініціалізація змінної*/
    char b ='G'; /*ініціалізація зішнної*/
    double c = 3.14; /*ініціалізація змінної*/
    printf("Hello World!\n"); /*вивод строки*/
    printf("Hello! I am a character. My value is %c and "/*вивод строки*/
           "my size is %lu byte.\n", b,sizeof(char)); /*вивод строки та показ скилькі байтів в аргументі char*/
    printf("Hello! I am an integer. My value is %d and "/*вивод строки*/
           "my size is %lu  bytes.\n", a,sizeof(int)); /*вивод строки та показ скилькі байтів в аргументі int*/
    printf("Hello! I am a double floating point variable."/*вивод строки*/
           " My value is %lf and my size is %lu bytes.\n",c,sizeof(double)); /*вивод строки та показ скилькі байтів в аргументі double*/ 
    printf("Bye! See you soon. :)\n"); /*вивод строки*/
  
    return 0; /**/
} 
