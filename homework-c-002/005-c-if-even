#include <stdio.h>
int main()
{
    double number;/*ініціалізація змінної*/
    printf("Enter a number: ");/*вивод строки*/
    scanf("%lf", &number);/*ввод в строку вводу*/
    if (number < 0.0)/*оцінка значень змінних*/
        printf("You entered a negative number.");/*вивод строки*/
    else if ( number > 0.0)/*оцінка протележного  результата*/
        printf("You entered a positive number.");/*вивод строки*/
    else/*оцінка протележного  результата*/
        printf("You entered 0.");/*вивод строки*/
    return 0;
}
